          "Version": "v1",
          "Contact": {
            "Name": "青杉",
            "Url": "http://zyaxin.com/",
            "Email": "qingshan@zyaxin.com"
          },
          "License": {
            "Name": "Apache-2.0"
          }
        },
        {
          "Group": "Upload",
