          "BearerFormat": "JWT",
          "Scheme": "bearer",
          "In": "Header",

          "Requirement": {
            "Scheme": {
              "Reference": {
                "Id": "Bearer",
                "Type": "SecurityScheme"
              },
              "Accesses": []
            }
          }
        }
      ]
    }
  },
  "Audience": {
