    "SpecificationDocumentSettings": {
      "DocumentTitle": "青杉接口服务",
      "FormatAsV2": true,
      "RoutePrefix": "",
      "SpecificationOpenApiInfo": [
        {
          "Group": "Default",
          "Order": 0
        },
        {
          "Group": "Upload",
          "Order": 0
        }
      ],
      "GroupOpenApiInfos": [
        {
          "Group": "Default",
          "Title": "默认API接口",
