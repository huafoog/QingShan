{
  "Logging": {
    //"IncludeScopes": false,
    "LogLevel": {
      //"Default": "Info",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database": "Information"
    }
  },
  "AllowedHosts": "*",
  "Config": {
    "InitModule": "0"
  },
  "AppSettings": {
    "DatabaseAccessorSettings": {
      "Type": "Mysql",
      "ConnectionString": "Data Source=localhost;Port=3306;User ID=root;Password=123456; Initial Catalog=QingShan;Charset=utf8; SslMode=none;Min pool size=1;AllowPublicKeyRetrieval=True;",
      "SyncStructure": true,
      "PrintingSQL": true,
      "GlobalFilter": true
    },
    "SpecificationDocumentSettings": {
      "DocumentTitle": "青杉接口服务",
      "FormatAsV2": false,
      "RoutePrefix": "",
      "SpecificationOpenApiInfo": [
        {
          "Group": "Default",
          "Order": 0
        },
        {
          "Group": "Upload",
          "Order": 1
        },
        {
          "Group": "Test",
          "Order": 2
        }
      ],
      "GroupOpenApiInfos": [
        {
          "Group": "Admin",
          "Title": "后台API接口",
          "Description": "后台API基础接口",
          "Version": "v1",
          "Contact": {
            "Name": "青杉",
            "Url": "http://zyaxin.com/",
            "Email": "qingshan@zyaxin.com"
          },
          "License": {
            "Name": "Apache-2.0"
          }
        },
        {
          "Group": "Upload",
          "Title": "上传服务",
          "Description": "这是上传文件的服务接口",
          "Version": "v1",
          "Contact": {
            "Name": "青杉",
            "Url": "http://zyaxin.com/",
            "Email": "qingshan@zyaxin.com"
          },
          "License": {
            "Name": "Apache-2.0"
          }
        }
      ],
      "EnableAuthorized": true,
      "SecurityDefinitions": [
        {
          "Id": "Bearer",
          "Type": "ApiKey",
          "Name": "Authorization",
          "Description": "在下框中输入请求头中需要添加Jwt授权Token：Bearer Token。",
          "BearerFormat": "JWT",
          "Scheme": "bearer",
          "In": "Header",

          "Requirement": {
            "Scheme": {
              "Reference": {
                "Id": "Bearer",
                "Type": "SecurityScheme"
              },
              "Accesses": []
            }
          }
        }
      ]
    }
  },

  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "pE1yb^iJHJh7zSL0CBctR9Se!bKD8P3ZpL*N", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "QingShan", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "QS", // 签收方，string 类型
    "ValidateLifetime": false, // 是否验证过期时间，bool 类型，默认true，建议true
    "ExpiredTime": 20, // 过期时间，long 类型，单位分钟，默认20分钟
    "ClockSkew": 5 // 过期时间容错值，long 类型，单位秒，默认 5秒
  },
  "StaticFileSettings": {
    "UseDirectoryBrowser": true,
    "StaticFileMap": [
      {
        "Suffix": ".jpg", //文件后缀
        "FileType": "image/jpeg" // 文件类型
      }
    ],
    "StaticFileFolder": [
      {
        "Folder": "www", //文件夹名称
        "ServeUnknownFileTypes": true, //如果文件不是可识别的内容类型，是否应该提供该文件?默认值:false。
        "DefaultContentType": "application/x-msdownload", // 设置未识别的MIME类型一个默认z值
        "RequestPath": "/qs" //请求路径
      },
      {
        "Folder": "Uploads", //文件夹名称
        "ServeUnknownFileTypes": true, //如果文件不是可识别的内容类型，是否应该提供该文件?默认值:false。
        "DefaultContentType": "application/x-msdownload", // 设置未识别的MIME类型一个默认z值
        "RequestPath": "/Uploads" //请求路径
      }
    ]

  },
  "Cache": {
    //"Redis": {
    //  "ConnectionString": "127.0.0.1:6379"
    //}
  },
  "CorsAccessorSettings": {
    "PolicyName": "web跨域",
    "WithOrigins": [ "http://zyaxin.com:8082", "http://localhost:9528", "http://localhost:8001", "http://localhost:8000" ]
  },
  "IpRateLimiting": {
    //false则全局将应用限制，并且仅应用具有作为端点的规则* 。 true则限制将应用于每个端点，如{HTTP_Verb}{PATH}
    "EnableEndpointRateLimiting": true,
    //false则拒绝的API调用不会添加到调用次数计数器上
    "StackBlockedRequests": false,
    //注意这个配置，表示获取用户端的真实IP，我们的线上经过负载后是 X-Forwarded-For，而测试服务器没有，所以是X-Real-IP
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 200,
    "QuotaExceededResponse": {
      "Content": "{{\"code\":429,\"msg\":\"访问过于频繁，请稍后重试\",\"data\":null}}",
      "ContentType": "application/json",
      "StatusCode": 200
    },
    "IpWhitelist": [],
    "EndpointWhitelist": [],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/values/test",
        "Period": "5s",
        "Limit": 3
      }
    ]
  }
}
